<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvClassName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Software Engineering Class" />

        <TextView
            android:id="@+id/tvAlarmTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12 April 2023, 09.00 GMT+7" />

        <TextView
            android:id="@+id/tvDescText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEC - Session 10" />

        <TextView
            android:id="@+id/tvSessDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Duration: " />


    </LinearLayout>

</androidx.cardview.widget.CardView>